<div id="layout">
  <%= render 'admin/shared/nav_bar'%>
  <div id="main">
    <div class="content">
      <h1>Menus</h1>
      <table class="table table-condensed">
        <thead>
        <tr>
          <td>id</td>
          <td>Name</td>
          <td>Description</td>
          <td>Image</td>
          <td>Category</td>
          <td>action</td>
        </tr>
        </thead>
        <tbody>
        <% @menus.each do |menu| %>
            <tr>
              <%= form_for menu, url: admin_menu_path(menu.id), method: :put do |f|  %>
                  <td><%= menu.id %></td>
                  <td><%= f.text_field :name %></td>
                  <td><%= f.text_area :description %></td>
                  <td><%= f.text_field :image %></td>
                  <td><%= f.collection_select(:category_id, Category.all, :id, :name, :required => true ) %></td>
                  <td><%=f.submit 'update' %><%= link_to 'delete', admin_menu_path(menu) %></td>
              <% end %>
            </tr>

        <% end %>
        </tbody>
        <tfoot>
        <%= form_for @menu, url: admin_menus_path, method: :post do |f|  %>
            <tr>
              <td></td>
              <td><%= f.text_field :name, placeholder: 'menu name...' %></td>
              <td><%= f.text_area :description %></td>
              <td><%= f.text_field :image %></td>
              <td><%= f.collection_select(:category_id, Category.all, :id, :name, :required => true)  %></td>
              <td><%= f.submit 'add' %></td>
            </tr>
        <% end %>
        </tfoot>
      </table>

    </div>
  </div>
</div>
